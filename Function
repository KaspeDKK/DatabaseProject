DELIMITER //
CREATE FUNCTION totalCost (vrepair_ID INT) RETURNS DECIMAL
BEGIN
DECLARE TotalUnitPrice DECIMAL(10,2);
SELECT SUM(quantity * unit_price) INTO TotalUnitPrice FROM Uses NATURAL JOIN Parts 
WHERE repair_ID = vrepair_ID;
RETURN TotalUnitPrice;
END//
DELIMITER ;

